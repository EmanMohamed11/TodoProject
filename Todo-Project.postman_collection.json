	"item": [
		{
			"name": "Register",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var random = Math.random().toString(36).substring(2);\r",
							"var email = random+\"@gmail.com\";\r",
							"var firstname = \"Em\"+ random;\r",
							"var lastname = \"M\" + random;\r",
							"pm.environment.set(\"env_email\",email);\r",
							"pm.environment.set(\"env_firstname\",firstname);\r",
							"pm.environment.set(\"env_lastname\",lastname);\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"CheckStatusCode\",()=>{\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200,201]);\r",
							"});\r",
							"  var jsonData = JSON.parse(responseBody);\r",
							" \r",
							" var token =jsonData.access_token;\r",
							" pm.environment.set(\"token\",token);\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"{{env_email}}\",\r\n    \"password\": \"test123!\",\r\n    \"firstName\": \"{{env_firstname}}\",\r\n    \"lastName\": \"{{env_lastname}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{Base_Url}}api/v1/users/register",
					"host": [
						"{{Base_Url}}api"
					],
					"path": [
						"v1",
						"users",
						"register"
					]
				}
			},
			"response": []
		},
